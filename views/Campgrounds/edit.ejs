<%- include("../partials/header") %>

<div class='container'>
	<div class="row">
		<h2 style="text-align: center"> YOU ARE EDITING : <strong><%=campground.name%></strong> </h2>
		<div style="width:30%; margin :50px auto">
			<form action="/campgrounds/<%=campground.slug %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class='form-control' type="text" value="<%=campground.name%>" name="cmpground[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=campground.img%>" name="cmpground[img]">
				</div>
				<div class='form-group'>
					<input class="form-control" type="text" value="<%=campground.description%>" name="cmpground[description]">
				</div>
				<div class="form-group">
				  <input class="form-control" type="number" name="cmpground[cost]" value="<%= campground.cost %>" step="0.01" min="0" required>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds/<%=campground.slug%>">Go Back</a>
		</div>
	</div>
</div>

<%-include("../partials/footer")%>